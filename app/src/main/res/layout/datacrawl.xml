<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="불러오기"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/basicbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="캐릭터 정보"
            android:visibility="gone"/>
        <Button
            android:id="@+id/statbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="스탯 각인"
            android:visibility="gone"/>
        <Button
            android:id="@+id/jewelbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="보석"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/jeweltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 보석 정보"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/jewel"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/basictitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="캐릭터 정보"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/crawltext"
        android:layout_weight="1.7"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

        <TextView
            android:id="@+id/basicabilitytitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 기본 특성"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/crawltext2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="17sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/settingtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="각인 효과"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/crawltext3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="17sp"
            android:visibility="gone" />


</LinearLayout>